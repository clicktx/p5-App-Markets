% layout 'default';
% title 'Login';


<h2><%= __('login') %></h2>

<p>
    <%= form_for 'RN_customer_login_authen' => (method => 'POST', style => 'border:1px solid gray') => begin %>
        <%= csrf_field %>
        Customer ID <%= text_field customer_id => 'defaulte' %>
        Password <%= password_field 'password' %>
        <%= submit_button 'ok' %>
    <% end %>
</p>

<p>
    New Customer? <%= link_to 'Create Your Account' => 'RN_customer_create_account' %>
</p>
