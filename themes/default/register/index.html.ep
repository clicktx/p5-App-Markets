% layout 'default';
% title 'Registration';

<h2>Create account</h2>

<div class="">
    <%= form_for 'RN_customer_register' => (method => 'POST', style => 'border:1px solid gray') => begin %>
        <%= csrf_field %>
        E-mail <%= email_field email => 'i@hoge.com' %>
        Password <%= password_field 'password' %>
        <%= submit_button 'ok' %>
    <% end %>
</div>

<div class="">
    Already have an account? <%= link_to 'Sign in' => 'RN_customer_login' %>
</div>
