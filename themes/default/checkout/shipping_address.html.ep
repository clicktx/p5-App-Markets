% layout 'default';
% title 'Select a shipping address';

<h1><%= title %></h1>

<%= link_to 'Edit Cart' => 'RN_cart' %>

<h3>ORDER SUMMARY</h3>

<h3>Secure checkout</h3>
<ol>
    <li>Please sign in</li>
    <li><strong>Shipping Address</strong></li>
    <li>Shipping Options</li>
    <li>Billing Options</li>
    <li>Order Confirmation</li>
</ol>

<h3>Select a shipping address</h3>
<ul>
    % $addresses->each( sub {
        % my ($address, $n) = @_;
        <li>
            <ul>
                % my $notation = $address->notation;
                % foreach my $row ( @{$notation} ) {
                    % next unless $row;
                    % my $content;
                    % if ( ref $row eq 'ARRAY' ){ $content .= $_ for @{$row} }
                    % else { $content = $row }
                    <li><%= $content %></li>
                % }
            </ul>
            <%= link_to 'Ship to this address' => '', ( class => 'submit-post btn btn-primary', 'data-name' => 'select_shipping_address', 'data-value' => $n - 1 ) %>
            <%= link_to 'Edit' => '', ( class => 'btn btn-light' ) %>
            <%= link_to 'Remove' => '', ( class => 'btn btn-light' ) %>
        </li>
    % });
</ul>

<h3>Add a new address</h3>
<div class="">
    form
    <%= link_to 'Ship to this address' => '', ( class => 'btn btn-primary' ) %>
</div>

<%= link_to 'Back to page' => 'RN_cart' %>
