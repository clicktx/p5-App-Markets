% layout 'admin-default';
% title __('Preferences');

<h1><%= title %></h1>

<%= form_for 'RN_admin_preferences_update' => begin %>
    <% $preferences->each( sub { %>
        <div class="">
            <%= $a %>
            <%= text_field "pref.$a", value => $b->value, placeholder => $b->default_value %>
        </div>
    <% }); %>
    <%= csrf_field %>
    <%= submit_button 'submit' %>
<% end %>
