<% extends 'admin/order/edit/base'; =%>
<% content billing_address => begin =%>
    <%= form_for '' => ( method => 'POST' ) => begin %>
        <%= csrf_field %>
        <% form 'billing_address'; %>
        <% my $fields = [qw(name line1 line2 city state postal_code phone mobile fax email)]; %>
        <%= include 'admin/form/fields', fields => $fields %>
        <div class="">
            <%= submit_button 'Save Billing Address' %>
        </div>
    <% end %>
<% end =%>
