<% extends 'admin/order/edit/base'; =%>
<% content $action => begin =%>
    <%= form_for '' => ( method => 'POST' ) => begin %>
        <% form $action; =%>
        <%= csrf_field %>
        <%= hidden_field "id" => $entity->$action->id %>
        <%= include 'common/components/form/address', fieldset => $action %>
        <div class="">
            <%= submit_button __("save.$action") %>
        </div>
    <% end =%>
<% end =%>
