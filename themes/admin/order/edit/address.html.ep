<% extends 'admin/order/edit/base'; =%>
<% my $action = stash('action'); =%>
<% content $action => begin =%>
    <%= form_for '' => ( method => 'POST' ) => begin %>
        <% form $action; =%>
        <%= csrf_field %>
        <%= hidden_field "$action.id" => $entity->$action->id %>
        <%= include 'admin/form/fields', field_names => stash('field_names') %>
        <div class="">
            <%= submit_button __("save.$action") %>
        </div>
    <% end =%>
<% end =%>
